"build": {
  "appId": "com.mai.medge2",
  "productName": "mEdge 2.0",
  "icon": "build/icon.png",
  "files": [
    "main.js",
    "preload.js",
    "src/**/*",
    "build/**/*"
  ],
  "mac": {
    "category": "public.app-category.productivity",
    "artifactName": "mEdge-${version}-mac.${ext}"
  },
  "win": {
    "target": ["nsis", "zip"],
    "artifactName": "mEdge-${version}-win.${ext}"
  },
  "linux": {
    "target": ["AppImage", "deb"],
    "artifactName": "mEdge-${version}-linux.${ext}"
  },
  "publish": [
    { "provider": "github" }
  ]
}
